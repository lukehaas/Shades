{
  "manifest_version": 3,
  "name": "Shades - Because the web is too bright",
  "version": "1.1.2",
  "description": "Protect your eyes while browsing the web. Apply color filters to reduce eye strain, filter blue light, and enhance visual comfort.",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Toggle Shades on/off"
    },
    "toggle-filter": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Toggle filter for current site"
    },
    "toggle-invert": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Toggle invert filter"
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Shades",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "run_at": "document_start"
    }
  ]
}
